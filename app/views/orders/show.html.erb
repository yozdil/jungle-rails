<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div style="background-color: white"class="order-summary jumbotron">
    <h4 style="color: #337AB7"><%= fa_icon "check", text: 'Your order is confirmed!' %></h4>
    <table class="table table-light">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody >
      <% @order.line_items.each do |item| %>
        <%= render 'item', product: item.product, quantity: item[:quantity].to_i %>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  <p style='font-weight: bolder'>A confirmation email has been sent to: <%= @order.email %></p>
  </div>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
